<Window x:Class="Xaml_WPF_ListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xaml_WPF_ListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="5" Text="Someones Name:"></TextBlock>
        <TextBox Margin="5" Grid.Row="1" Name="WriteSomeonesName" AcceptsReturn="False"></TextBox>
        <Button Grid.Row="2" Margin="5" Content="Add Someone" Click="AddPerson"/>
        <ListBox Name="InfectedPeopleList" Margin="5" Grid.Row="3"/>
    </Grid>
</Window>
    
